# LearnTAV Form Handler Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001

# Email Configuration (Required)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=hello@learntav.com
SMTP_PASS=your_gmail_app_password_here
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Notification Email (where admin notifications are sent)
NOTIFICATION_EMAIL=hello@learntav.com

# Security Configuration
ALLOWED_ORIGINS=https://learntav.com,https://www.learntav.com,http://localhost:3000

# Optional: SendGrid Configuration (alternative to SMTP)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=hello@learntav.com

# Optional: Database Configuration (for logging submissions)
# DATABASE_URL=postgresql://username:password@localhost:5432/learntav_forms

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Development Settings
DEBUG=true
LOG_LEVEL=info